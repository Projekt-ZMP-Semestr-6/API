                ],
                "summary": "Update name",
                "description": "Update user's name",
                "operationId": "userName",
                "requestBody": {
                    "description": "Pass name to set",
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Bob4"
                                    }

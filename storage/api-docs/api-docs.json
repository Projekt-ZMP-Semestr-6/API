                ],
                "summary": "Get user info",
                "description": "Get info about currently authenticated user",
                "operationId": "userInfo",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"

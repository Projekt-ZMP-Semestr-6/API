                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/user/password": {
            "put": {
                "tags": [
                    "User"
                ],
                "summary": "Update password",
                "description": "Update user's password",
                "operationId": "userPassword",
                "requestBody": {
                    "description": "Pass old and new password",
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "old_password",
                                    "new_password",
                                    "new_password_confirmation"
                                ],
                                "properties": {
                                    "old_password": {
                                        "type": "password",
                                        "example": "password123"
                                    },
                                    "new_password": {
                                        "type": "password",
                                        "example": "password12345"
                                    },
                                    "new_password_confirmation": {
                                        "type": "password",
                                        "example": "password12345"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                },
                                "example": "Password updated!"
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Content",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "attribiute_name": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "problem_message"
                                            }
                                        },
                                        "other_attribiute_name": {
                                            "type": "array",
                                            "items": {

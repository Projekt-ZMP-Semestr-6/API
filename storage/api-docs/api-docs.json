{
    "openapi": "3.0.0",
    "info": {
        "title": "Price tracking application.",
        "version": "1.0.0"
    },
    "paths": {
        "/api/auth/email/verification-notification": {
            "post": {
                "tags": [
                    "Email verification"
                ],
                "summary": "Resend notification",
                "description": "Resend email verification notification",
                "operationId": "resendEmailVerification",
                "requestBody": {
                    "description": "Pass the email to which the notification will be send",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "email",
                                        "example": "test@test.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                },
                                "example": "Mail sent!"
                            }
                        }
                    },
                    "429": {
                        "description": "Too Many Requests"
                    }
                }
            }
        },
        "/api/auth/email/verify/{id}/{hash}": {
            "get": {
                "tags": [
                    "Email verification"
                ],
                "summary": "Verify email",
                "description": "Verify user's email",
                "operationId": "verifyEmail",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "User's id",
                        "required": true,
                        "example": "95e36453-b0e0-4827-8e05-3bf13981dc28"
                    },
                    {
                        "name": "hash",
                        "in": "path",
                        "description": "Hash from server",
                        "required": true,
                        "example": "552cb23b88d656134881275f5925d5c2e252ca78"
                    },
                    {
                        "name": "expires",
                        "in": "query",
                        "description": "Time until link expire",
                        "required": true,
                        "example": "1648044292"
                    },
                    {
                        "name": "signature",
                        "in": "query",
                        "description": "Signature from server",
                        "required": true,
                        "example": "1ce16e79c7392251ea3969fd1774a674efb5173efc6c4ab4d90446d58d515869"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                },
                                "example": "Email verified!"
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Log in",
                "description": "Login by email, password",
                "operationId": "login",
                "requestBody": {
                    "description": "Pass user's credentials to log in",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password",
                                    "device_name"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "email",
                                        "example": "test@test.com"
                                    },
                                    "password": {
                                        "type": "password",
                                        "example": "password123"
                                    },
                                    "device_name": {
                                        "$ref": "#/components/schemas/DeviceName"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BearerToken"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Content",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "oneOf": [
                                        {
                                            "$ref": "#/components/schemas/attribiuteProblem"
                                        },
                                        {
                                            "$ref": "#/components/schemas/incorrectCredentials"
                                        },
                                        {
                                            "$ref": "#/components/schemas/verifyEmail"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/logout": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Log out",
                "description": "Log out user",
                "operationId": "logout",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Register",
                "description": "Register new account",
                "operationId": "register",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "name",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "test@test.com"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "Greg"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Content",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "attribiute_name": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "problem_message"
                                            }
                                        },
                                        "other_attribiute_name": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "problem_message"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/forgot-password/send": {
            "post": {
                "tags": [
                    "Forgot Password"
                ],
                "summary": "Request notification",
                "description": "Request reset password notification",
                "operationId": "sendResetPasswordNotification",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "email",
                                        "example": "test@test.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "429": {
                        "description": "Too Many Requests"
                    },
                    "422": {
                        "description": "Unprocessable Content"
                    }
                }
            }
        },
        "/api/forgot-password/reset": {
            "post": {
                "tags": [
                    "Forgot Password"
                ],
                "summary": "Reset password",
                "description": "Reset password",
                "operationId": "ResetPassword",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "token",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "token": {
                                        "type": "string",
                                        "example": "aa2aa9436157bad1f287119f85ac52127dfc40e5d9a58dd3886ac258a3e259b0"
                                    },
                                    "email": {
                                        "type": "email",
                                        "example": "test@test.com"
                                    },
                                    "password": {
                                        "type": "password",
                                        "example": "password123"
                                    },
                                    "password_confirmation": {
                                        "type": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "422": {
                        "description": "Unprocessable Content"
                    }
                }
            }
        },
        "/api/game/{gameId}": {
            "get": {
                "tags": [
                    "Game"
                ],
                "summary": "Game details",
                "description": "Get deal's details for specific game",
                "operationId": "gameDetails",
                "parameters": [
                    {
                        "name": "gameId",
                        "in": "path",
                        "description": "Game's ID",
                        "required": true,
                        "example": "167613"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "info": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "title": {
                                                        "type": "string",
                                                        "example": "LEGO Batman"
                                                    },
                                                    "steamAppID": {
                                                        "type": "string",
                                                        "example": "21000"
                                                    },
                                                    "thumb": {
                                                        "type": "string",
                                                        "example": "https://originassets.akamaized.net/origin-com-store-final-assets-prod/195763/142.0x200.0/1040463_MB_142x200_en_US_^_2017-09-08-15-21-36_d7034d41216b6dc201fb20e0cee37c1e66190a11.jpg"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "cheapestPriceEver": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "price": {
                                                        "type": "string",
                                                        "example": "3.99"
                                                    },
                                                    "date": {
                                                        "type": "date:unix_timestamp",
                                                        "example": "1543028665"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "deals": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "storeID": {
                                                        "type": "string",
                                                        "example": "23"
                                                    },
                                                    "dealID": {
                                                        "type": "string",
                                                        "example": "tyTH88J0PXRvYALBjV3cNHd5Juq1qKcu4tG4lBiUCt4%3D"
                                                    },
                                                    "price": {
                                                        "type": "string",
                                                        "example": "14.95"
                                                    },
                                                    "retailPrice": {
                                                        "type": "string",
                                                        "example": "19.99"
                                                    },
                                                    "savings": {
                                                        "type": "string",
                                                        "example": "25.212606"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/search/{gameName}": {
            "get": {
                "tags": [
                    "Game"
                ],
                "summary": "Search game",
                "description": "Search for game with the given title",
                "operationId": "gameSearch",
                "parameters": [
                    {
                        "name": "gameName",
                        "in": "path",
                        "description": "Game's title",
                        "required": true,
                        "example": "batman"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Game"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/user/delete": {
            "delete": {
                "tags": [
                    "User"
                ],
                "summary": "Delete account",
                "description": "Delete currently authenticated user",
                "operationId": "userDelete",
                "requestBody": {
                    "description": "Pass password to confirm deletion",
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "password"
                                ],
                                "properties": {
                                    "password": {
                                        "type": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                },
                                "example": "Account deleted!"
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Content",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "password": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "problem_message"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },

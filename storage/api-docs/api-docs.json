{
    "openapi": "3.0.0",
    "info": {
        "title": "Price tracking application.",
        "version": "1.0.0"
    },
    "paths": {
        "/api/auth/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Log in",
                "description": "Login by email, password",
                "operationId": "login",
                "requestBody": {
                    "description": "Pass user's credentials to log in",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password",
                                    "device_name"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "email",
                                        "example": "test@test.com"
                                    },
                                    "password": {
                                        "type": "password",
                                        "example": "password123"
                                    },
                                    "device_name": {
                                        "$ref": "#/components/schemas/DeviceName"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BearerToken"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Content",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "oneOf": [
                                        {
                                            "$ref": "#/components/schemas/attribiuteProblem"
                                        },
                                        {
                                            "$ref": "#/components/schemas/incorrectCredentials"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/logout": {
            "get": {
                "tags": [
                    "auth"
                ],
                "summary": "Log out",
                "description": "Log out user",
                "operationId": "logout",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/auth/register": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Register",
                "description": "Register new account",
                "operationId": "register",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "name",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "test@test.com"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "Greg"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Content",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "attribiute_name": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "problem_message"
                                            }
                                        },
                                        "other_attribiute_name": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "problem_message"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "DeviceName": {
                "oneOf": [
                    {
                        "type": "string",
                        "example": "desktop",
                        "property": "device_name"
                    },
                    {
                        "type": "string",
                        "example": "web",
                        "property": "device_name"
                    },
                    {
                        "type": "string",
                        "example": "mobile",
                        "property": "device_name"
                    }
                ]
            },
            "BearerToken": {
                "properties": {
                    "Bearer": {
                        "type": "bearerToken",
                        "example": "1|9o7QEJY84otL2hjS6MuiNOUQZgQ0D43IhDFDfZuI"
                    }
                },
                "type": "object"
            },
            "incorrectCredentials": {
                "properties": {
                    "": {
                        "type": "string",
                        "example": "Incorrect credentials"
                    }
                },
                "type": "object"
            },
            "attribiuteProblem": {
                "properties": {
                    "attribiute_name": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "problem_message"
                        }
                    },
                    "other_attribiute_name": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "problem_message"
                        }
                    }
                },
                "type": "object"
            },
            "User": {
                "properties": {
                    "email": {
                        "type": "email",
                        "example": "test@test.com"
                    },
                    "name": {
                        "type": "string",
                        "example": "Greg"
                    },
                    "id": {
                        "type": "uuid",
                        "example": "95c0fbe0-2ae6-4a99-a41c-14b0a68cf057"
                    },
                    "updated_at": {
                        "type": "date-time",
                        "example": "2022-03-06T10:02:00.000000Z"
                    },
                    "created_at": {
                        "type": "date-time",
                        "example": "2022-03-06T10:02:00.000000Z"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer <token>)",
                "name": "Authorization",
                "in": "header"
            }
        }
    },
    "security": [
        []
    ]
}
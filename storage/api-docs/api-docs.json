    },
    "components": {
        "schemas": {
            "DeviceName": {
                "oneOf": [
                    {
                        "type": "string",
                        "example": "desktop",
                        "property": "device_name"
                    },
                    {
                        "type": "string",
                        "example": "web",
                        "property": "device_name"
                    },
                    {
                        "type": "string",
                        "example": "mobile",
                        "property": "device_name"
                    }
                ]
            },
            "BearerToken": {
                "properties": {
                    "Bearer": {
                        "type": "bearerToken",
                        "example": "1|9o7QEJY84otL2hjS6MuiNOUQZgQ0D43IhDFDfZuI"
                    }
                },
                "type": "object"
            },
            "incorrectCredentials": {
                "properties": {
                    "": {
                        "type": "string",
                        "example": "Incorrect credentials"
                    }
                },
                "type": "object"
            },
            "attribiuteProblem": {
                "properties": {
                    "attribiute_name": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "problem_message"
                        }
                    },
                    "other_attribiute_name": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "problem_message"
                        }
                    }
                },
                "type": "object"
            },
            "verifyEmail": {
                "type": "string",
                "example": "Email not verified."
            },
            "Game": {
                "properties": {
                    "gameID": {
                        "type": "string",
                        "example": "612"
                    },
                    "steamAppID": {
                        "type": "string",
                        "example": "21000"
                    },
                    "cheapest": {
                        "type": "string",
                        "example": "14.95"
                    },
                    "cheapestDealID": {
                        "type": "string",
                        "example": "tyTH88J0PXRvYALBjV3cNHd5Juq1qKcu4tG4lBiUCt4%3D"
                    },
                    "external": {
                        "type": "string",
                        "example": "LEGO Batman"
                    },
                    "internalName": {
                        "type": "string",
                        "example": "LEGOBATMAN"
                    },
                    "thumb": {
                        "type": "string",
                        "example": "https://originassets.akamaized.net/origin-com-store-final-assets-prod/195763/142.0x200.0/1040463_MB_142x200_en_US_^_2017-09-08-15-21-36_d7034d41216b6dc201fb20e0cee37c1e66190a11.jpg"
                    }
                },
                "type": "object"
            },
            "User": {
                "properties": {
                    "id": {
                        "type": "uuid",
                        "example": "95c0fbe0-2ae6-4a99-a41c-14b0a68cf057"
                    },
                    "name": {
                        "type": "string",
                        "example": "Greg"
                    },
                    "email": {
                        "type": "email",
                        "example": "test@test.com"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer <token>)",
                "name": "Authorization",
                "in": "header"
            }
        }
    }
}
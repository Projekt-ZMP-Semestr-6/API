{
    "openapi": "3.0.0",
    "info": {
        "title": "Price tracking application.",
        "version": "1.0.0"
    },
    "paths": {
        "/api/auth/email/verification-notification": {
            "post": {
                "tags": [
                    "Email verification"
                ],
                "summary": "Resend notification",
                "description": "Resend email verification notification",
                "operationId": "resendEmailVerification",
                "requestBody": {
                    "description": "Pass the email to which the notification will be send",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "email",
                                        "example": "test@test.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                },
                                "example": "Mail sent!"
                            }
                        }
                    },
                    "429": {
                        "description": "Too Many Requests"
                    }
                }
            }
        },
        "/api/auth/email/verify/{id}/{hash}": {
            "get": {
                "tags": [
                    "Email verification"
                ],
                "summary": "Verify email",
                "description": "Verify user's email",
                "operationId": "verifyEmail",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "User's id",
                        "required": true,
                        "example": "95e36453-b0e0-4827-8e05-3bf13981dc28"
                    },
                    {
                        "name": "hash",
                        "in": "path",
                        "description": "Hash from server",
                        "required": true,
                        "example": "552cb23b88d656134881275f5925d5c2e252ca78"
                    },
                    {
                        "name": "expires",
                        "in": "query",
                        "description": "Time until link expire",
                        "required": true,
                        "example": "1648044292"
                    },
                    {
                        "name": "signature",
                        "in": "query",
                        "description": "Signature from server",
                        "required": true,
                        "example": "1ce16e79c7392251ea3969fd1774a674efb5173efc6c4ab4d90446d58d515869"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                },
                                "example": "Email verified!"
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Log in",
                "description": "Login by email, password",
                "operationId": "login",
                "requestBody": {
                    "description": "Pass user's credentials to log in",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password",
                                    "device_name"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "email",
                                        "example": "test@test.com"
                                    },
                                    "password": {
                                        "type": "password",
                                        "example": "password123"
                                    },
                                    "device_name": {
                                        "$ref": "#/components/schemas/DeviceName"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BearerToken"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Content",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "oneOf": [
                                        {
                                            "$ref": "#/components/schemas/attribiuteProblem"
                                        },
                                        {
                                            "$ref": "#/components/schemas/incorrectCredentials"
                                        },
                                        {
                                            "$ref": "#/components/schemas/verifyEmail"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/logout": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Log out",
                "description": "Log out user",
                "operationId": "logout",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Register",
                "description": "Register new account",
                "operationId": "register",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "name",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "test@test.com"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "Greg"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Content",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "attribiute_name": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "problem_message"
                                            }
                                        },
                                        "other_attribiute_name": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "problem_message"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/forgot-password/send": {
